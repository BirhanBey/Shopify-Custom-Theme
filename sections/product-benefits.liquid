{% stylesheet %}
  .product-benefits {
    /* padding: 80px 20px; */
    padding: 50px 50px;
    /* padding-top: 50px ;
    padding-bottom: 50px;
    padding-right: 80px;
    padding-left: 80px; */
  }
  .product-benefits__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
  }
  .benefit-item {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .benefit-item__icon {
    width: 60px;
    height: 60px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .benefit-item__icon svg {
    width: 100%;
    height: 100%;
    stroke: currentColor;
  }
  .benefit-item__title {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 15px;
    color: currentColor;
  }
  .benefit-item__description {
    font-size: 16px;
    line-height: 1.6;
    color: currentColor;
    opacity: 0.9;
  }
  @media (max-width: 768px) {
    .product-benefits {
      padding: 40px 20px;
    }
    .product-benefits__container {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }
{% endstylesheet %}

{% schema %}
