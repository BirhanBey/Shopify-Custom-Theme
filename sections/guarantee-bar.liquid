<div class="guarantee-bar" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="guarantee-bar__container">
    {% for block in section.blocks %}
      <div class="guarantee-bar__item">
        {{ block.settings.text }}
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .guarantee-bar {
    padding: 20px 0;
    overflow: hidden;
  }
  .guarantee-bar__container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    white-space: nowrap;
    animation: scroll 20s linear infinite;
  }
  .guarantee-bar__item {
    font-weight: 600;
    font-size: 16px;
    flex-shrink: 0;
  }
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  @media (max-width: 768px) {
    .guarantee-bar__container {
      gap: 20px;
    }
    .guarantee-bar__item {
      font-size: 14px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Guarantee Bar",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#4A90E2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "guarantee_item",
      "name": "Guarantee Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "60 Day Money Back Guarantee"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Guarantee Bar",
      "blocks": [
        {
          "type": "guarantee_item",
          "settings": {
            "text": "60 Day Money Back Guarantee"
          }
        },
        {
          "type": "guarantee_item",
          "settings": {
            "text": "Free Shipping"
          }
        }
      ]
    }
  ]
}
{% endschema %}

