  }
  .main-product__images-slider {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
  }
  .main-product__images-slider .splide__track {
    width: 100%;
  }
  .main-product__images-slider .splide__list {
    display: flex;
  }
  .main-product__images-slider .splide__slide {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .main-product__slider-image {
