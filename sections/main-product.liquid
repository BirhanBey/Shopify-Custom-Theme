{% javascript %}
  (function () {
    function initImagesSlider() {
      if (typeof Splide !== 'undefined') {
        const sliderElement = document.querySelector('#product-images-slider');
        if (sliderElement) {
          const slides = sliderElement.querySelectorAll('.splide__slide');
          const slideCount = slides.length;

          if (slideCount > 0) {
            new Splide('#product-images-slider', {
              type: 'slide',
              perPage: 1,
              perMove: 1,
              gap: '0px',
              pagination: slideCount > 1,
              arrows: slideCount > 1,
              autoplay: slideCount > 1 ? 'play' : false,
              interval: 5000,
              pauseOnHover: true,
              resetProgress: false,
              speed: 300,
              rewind: false,
              width: '100%',
            }).mount();
          }
        }
      } else {
        setTimeout(initImagesSlider, 100);
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initImagesSlider);
    } else {
      initImagesSlider();
    }
  })();
{% endjavascript %}
